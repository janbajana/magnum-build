[
  {
    "name": "Android Clang",
    "toolchainFile": "${env:ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
    "preferredGenerator": {
      "name": "Ninja"
    },
    "cmakeSettings": {
      "ANDROID_NDK": "${env:ANDROID_NDK_HOME}",
      "ANDROID_ABI": "arm64-v8a",
      "ANDROID_NATIVE_API_LEVEL": "28",
      "CMAKE_ANDROID_NDK_TOOLCHAIN_VERSION": "clang",
      "CMAKE_ANDROID_STL_TYPE": "c++_static",
      "ANDROID_SDK" : "${env:ANDROID_SDK}"
    }
  }
]